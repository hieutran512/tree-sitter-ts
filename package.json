{
  "name": "tree-sitter-ts",
  "version": "0.1.0",
  "description": "Pure TypeScript parser library with declarative language profiles. No WASM required.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "keywords": [
    "parser",
    "lexer",
    "syntax",
    "tree-sitter",
    "typescript",
    "highlighting",
    "rag"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.3.0",
    "jest": "^29.7.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vite": "^7.3.1"
  }
}